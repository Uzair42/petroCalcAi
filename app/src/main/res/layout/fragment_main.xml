<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <EditText

        android:id="@+id/etPricePerLiter"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Price per Liter (Rs)"
        android:inputType="numberDecimal"
        style="@style/CustomEditText" />

    <EditText
        android:id="@+id/etMileage"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Mileage (km/l)"
        android:inputType="numberDecimal"
        style="@style/CustomEditText" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Amount to Refuel (Rs)"
        android:inputType="numberDecimal"
        style="@style/CustomEditText" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Calculate"
        style="@style/CustomButton" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btnSavePreferences"
        android:text="Save Preferences"
        style="@style/CustomButton" />

    <Button
        android:id="@+id/btnShowHistory"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Show History"
        style="@style/CustomButton" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:text="Result will appear here"
        style="@style/ResultText" />
</LinearLayout>
